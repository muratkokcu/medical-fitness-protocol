{
  "name": "medical-fitness-platform",
  "private": true,
  "version": "1.0.0",
  "description": "Medical Fitness Assessment Platform - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@medical-fitness/web",
    "dev:api": "npm run dev --workspace=@medical-fitness/api",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=@medical-fitness/web",
    "build:api": "npm run build --workspace=@medical-fitness/api",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf apps/*/dist apps/*/node_modules packages/*/dist packages/*/node_modules node_modules",
    "postinstall": "npm run build --workspace=@medical-fitness/shared-types"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "",
  "license": "MIT"
}
